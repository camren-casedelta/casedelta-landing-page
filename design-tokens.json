  "metadata": {
    "name": "CaseDelta Design System",
    "description": "Design tokens for CaseDelta legal case management platform",
    "version": "1.0.0",
    "lastUpdated": "2025-12-30",
    "designPrinciples": [
      "Professional minimalism",
      "Grayscale-first color palette",
      "14px base font size (not 16px)",
      "4px grid spacing system",
      "High contrast for accessibility",
      "Subtle, purposeful animations",
      "Flat design (no shadows or gradients)"
    ],
    "keyDifferences": [
      {
        "aspect": "Base font size",
        "value": "14px (0.875rem)",
        "note": "NOT the typical 16px - this is critical to CaseDelta's brand identity"
      },
      {
        "aspect": "Primary button color",
        "value": "#212121 (dark gray)",
        "note": "NOT pure black (#000000)"
      },
      {
        "aspect": "Page background",
        "value": "#F3F3F3 (light gray)",
        "note": "NOT pure white (#FFFFFF)"
      },
      {
        "aspect": "Font weights",
        "value": "400, 500, 600 only",
        "note": "Do not use bold (700) or light (300)"
      },
      {
        "aspect": "Input focus",
        "value": "Border color change only",
        "note": "NO outline, NO ring, NO shadow"
      },
      {
        "aspect": "Color usage",
        "value": "Grayscale-first",
        "note": "Use semantic colors (success, error, warning) sparingly"
      }
    ]
  },
